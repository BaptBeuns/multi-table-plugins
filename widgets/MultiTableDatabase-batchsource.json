{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Multiple Database Tables",
  "configuration-groups": [
    {
      "label": "Multi Table Database Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textbox",
          "label": "JDBC Connection String",
          "name": "connectionString"
        },
        {
          "widget-type": "textbox",
          "label": "JDBC Plugin Name",
          "name": "jdbcPluginName"
        },
        {
          "widget-type": "textbox",
          "label": "Database User Name",
          "name": "user"
        },
        {
          "widget-type": "password",
          "label": "Database User Password",
          "name": "password"
        },
        {
          "widget-type": "radio-group",
          "label": "Data Selection Mode",
          "name": "dataSelectionMode",
          "widget-attributes": {
            "layout": "inline",
            "default": "allow-list",
            "options": [
              {
                "id": "allow-list",
                "label": "Table Allow List"
              },
              {
                "id": "block-list",
                "label": "Table Block List"
              },
              {
                "id": "sql-statements",
                "label": "Custom SQL Statements"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Schema Name Pattern",
          "name": "schemaNamePattern"
        },
        {
          "widget-type": "textbox",
          "label": "Table Name Pattern",
          "name": "tableNamePattern"
        },
        {
          "widget-type": "textarea",
          "label": "Where Clause",
          "name": "whereClause"
        },
        {
          "widget-type": "csv",
          "label": "Allow List of Table Names",
          "name": "whiteList"
        },
        {
          "widget-type": "csv",
          "label": "Block List of Table Names",
          "name": "blackList"
        },
        {
          "widget-type": "csv",
          "label": "SQL Statements",
          "name": "sqlStatements",
          "widget-attributes": {
            "delimiter": ";",
            "value-placeholder": "Enter a SQL statement"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Table Name Field",
          "name": "tableNameField"
        },
        {
          "widget-type": "textbox",
          "label": "Enable Auto Commit",
          "name": "enableAutoCommit"
        },
        {
          "widget-type": "textbox",
          "label": "Splits Per Table",
          "name": "splitsPerTable",
          "widget-attributes": {
            "default": "1"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Query Timeout (Seconds)",
          "name": "queryTimeoutSeconds"
        },
        {
          "widget-type": "select",
          "label": "Transaction Isolation Level",
          "name": "transactionIsolationLevel",
          "widget-attributes": {
            "values": [
              "TRANSACTION_NONE",
              "TRANSACTION_READ_UNCOMMITTED",
              "TRANSACTION_READ_COMMITTED",
              "TRANSACTION_REPEATABLE_READ",
              "TRANSACTION_SERIALIZABLE"
            ],
            "default": "TRANSACTION_SERIALIZABLE"
          }
        }
      ]
    },
    {
      "label" : "Error Handling",
      "properties" : [
        {
          "name": "errorHandlingMode",
          "label": "Error Handling Mode",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "block",
            "default": "fail-pipeline",
            "options": [
              {
                "id": "skip-table",
                "label": "Skip table"
              },
              {
                "id": "send-to-error-port",
                "label": "Send to error port"
              },
              {
                "id": "fail-pipeline",
                "label": "Fail pipeline"
              }
            ]
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "tableSelectionFields",
      "condition": {
        "expression": "dataSelectionMode == 'allow-list' || dataSelectionMode == 'block-list'"
      },
      "show": [
        {
          "name": "schemaNamePattern"
        },
        {
          "name": "tableNamePattern"
        },
        {
          "name": "whereClause"
        },
        {
          "name": "splitsPerTable"
        }
      ]
    },
    {
      "name": "allowList",
      "condition": {
        "expression": "dataSelectionMode == 'allow-list'"
      },
      "show": [
        {
          "name": "whiteList"
        }
      ]
    },
    {
      "name": "blockList",
      "condition": {
        "expression": "dataSelectionMode == 'block-list'"
      },
      "show": [
        {
          "name": "blackList"
        }
      ]
    },
    {
      "name": "sqlStatements",
      "condition": {
        "expression": "dataSelectionMode == 'sql-statements'"
      },
      "show": [
        {
          "name": "sqlStatements"
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": [ ]
}
